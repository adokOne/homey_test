<h1 class="h3 mb-3">
  <strong><%= @user.display_name %></strong>
</h1>

<div class="row">
  <div class="col-12 col-lg-12 col-xxl-12 d-flex">
    <div class="card flex-fill">
      <div class="card-body">
        <%= form_for(@user) do |f| %>
        <div class="mb-3">
          <%= f.label 'Roles', class:'form-label' %>
          <%= f.collection_check_boxes(:role_ids, Role.all, :id, :name, class: 'form-control') %>
        </div>
        <div class="mb-3">
          <%= f.submit 'Save', class: 'btn btn-primary'%>
        </div>
        <% end%>
      </div>
    </div>
  </div>
</div>
