<main class="d-flex w-100">
  <div class="container d-flex flex-column">
    <div class="row vh-100">
      <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">

          <div class="text-center mt-4">
            <p class="lead">
              Sign in to your account to continue
            </p>
            <p>
              <ul>
                <li>
                  Admin credentials:
                </li>
                <li>
                  Login: <strong>admin@example.com</strong>
                </li>
                <li>
                  Password: <strong>password</strong>
                </li>
                <li>
                  User credentials:
                </li>
                <li>
                 <strong>Please use 'Sign up' link</strong>
                </li>
              </ul>
            </p>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="m-sm-4">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="mb-3">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Enter your email" %>
                  </div>
                  <div class="mb-3">
                    <%= f.label :password, class: "form-label" %><br />
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Enter your password" %>
                    <small><%= render "devise/shared/links" %></small>
                  </div>
                  <div>
                    <% if devise_mapping.rememberable? %>
                      <label class="form-check">
                        <%= f.check_box :remember_me, class: 'form-check-input' %>
                        <span class="form-check-label">
                          Remember me next time
                        </span>
                      </label>
                    <% end %>
                  </div>
                  <div class="text-center mt-3">
                    <%= f.submit "Log in", class: 'btn btn-lg btn-primary' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</main>